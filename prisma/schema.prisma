generator client {
  provider = "prisma-client-py"
  output   = "./generated/client"
  recursive_type_depth = 5
}



datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model UserReminders {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  dontRemind  Boolean  @default(false)
  createdAt   DateTime @default(now())
}

